import java.util.*;

public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
       int n = sc.nextInt();
       int m = sc.nextInt();
        int count = 0;
       for(int i=0;i*i<=n;i++){
            int a=i;
            int asq = a*a;
            int b = n-asq;
            
            if(a+(b*b)==m){
                count++;
            }

       }
       System.out.println(count);
    }
}