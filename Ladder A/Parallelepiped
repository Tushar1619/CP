import java.util.*;
public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int i1=sc.nextInt();
        int i2=sc.nextInt();
        int i3=sc.nextInt();
        int a=(i1*i3)/i2;
        a=(int)Math.sqrt(a);
        int b=(i2*i1)/i3;
        b=(int)Math.sqrt(b);
        int c=(i3*i2)/i1;
        c=(int)Math.sqrt(c);
        System.out.println(4*(a+b+c));
    }
}